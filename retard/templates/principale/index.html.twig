{% extends 'base.html.twig' %}


{% block body %}
    <style>
        font-family{
            font-family: 'Roboto', sans-serif;
        }
        body{
            background-color: #f5f5f5;
        }

        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

        h1{

            text-align: center;
            font-size: 3rem;
        }


        form{
            font-size: 1.5rem;
            text-align: center;
        }
        input{
            margin: 10px;
            border-radius: 5px;
        }
        select{
            margin: 10px;
            border-radius: 5px;
        }

        button{
            margin: 10px;
            border-radius: 5px;
            border: black 1px solid;
            color: black;
            padding: 15px 32px;
            text-align: center;


        }
        button:hover{
            background-color: #4CAF50;
        }


    </style>

    <body>

    <h1 class="">Page d'accueil</h1>

    {{ form_start(form) }}
    {{ form_row(form.Nom) }}
    {{ form_row(form.Prenom) }}
    {{ form_row(form.Sujet) }}
    {{ form_row(form.Choix)}}
    {{ form_end(form) }}
    </body>

{% endblock %}
