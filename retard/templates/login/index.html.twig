{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">
    <h1>Connection</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.password) }}
    <a href="{{ path('inscription') }}">Pas encore inscrit ?</a>

    {{ form_end(form)}}

    </div>

    <style>
        *{
            font-family: sans-serif;
        }

        .container{
            width: 100%;
            height: 100vh;

            display: flex;
            flex-direction: column;
            align-items: center;
        }
        a{
            align-self: flex-end;
        }

        h1{
            text-align: center;
        }

        form{
            display: flex;
            flex-direction: column;
        }

        form > div{
            display: flex;
            flex-direction: column;
        }

        input{
            margin: 0.5em 0 1em 0;

            width: 30em;
            height: 2em;

            border: 1px solid #d7d8da;
            border-radius: 5px;
        }

        button{
            margin-top: 20px;
            padding: 1em;

            width: 10em;

            align-self: flex-end;

            border: none;
            border-radius: 5px;
            background-color: #2b68da;

            color: #fff;
        }

        button:hover{
            cursor: pointer;
        }
    </style>
        {% endblock %}
